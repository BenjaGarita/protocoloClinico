<h1>Lista de las citas</h1>

<table>
  <tr>
    <th>Matricula</th>
    <th>Tema</th>
    <th>Fecha</th>
    <th>Estado</th>
    <th>Hora de inicio</th>
    <th>Hora fin</th>
    <th>Resultado</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @cita.each do |citum| %>
  <tr>
    <td><%= citum.matricula %></td>
    <td><%= citum.tema %></td>
    <td><%= citum.fecha %></td>
    <td><%= citum.estado %></td>
    <td><%= citum.hora_de_inicio %></td>
    <td><%= citum.hora_fin %></td>
    <td><%= citum.resultado %></td>
    <td><%= link_to 'Show', citum %></td>
    <td><%= link_to 'Edit', edit_citum_path(citum) %></td>
    <td><%= link_to 'Destroy', citum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

